<Window x:Class="OOOpj.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOOpj.Windows"
        mc:Ignorable="d"
        Title="ООО «ПОЛИНОМ ЖИГАЛКИНА»" Height="300" MinHeight="300" MaxHeight="200" Width="600" MaxWidth="600" MinWidth="600" Closed="Window_Closed">
    <Grid Background="#ff6200">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="ООО «ПОЛИНОМ ЖИГАЛКИНА»" HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Content="Логин" Grid.Column="0" Grid.Row="1" Margin="0,15,0,0"/>
        <Label Content="Пароль" Grid.Column="1" Grid.Row="1" Margin="0,15,0,0"/>
        <TextBox Name="password" Grid.Row="1" Margin="10,49,45,32" Grid.Column="1"/>
        <TextBox Name="login" Grid.Row="1" Margin="10,49,45,32" Grid.RowSpan="1"/>
        <Button x:Name="RegisterButton" Click="RegisterButton_Click" Content="Зарегестрироваться!" Grid.Row="2" Grid.ColumnSpan="2" Margin="80,20,80,60"/>


    </Grid>
</Window>
